type Query {
  getChats: [Chat!]
}

type Mutation {
  createChat(memberIds: [String!]!, name: String): Chat!
  deleteChat(id: ID!): String!
}

type Chat {
  id: ID!
  members: [User!]!
  name: String
  lastMessage: Message
}

type Message {
  id: ID!
  content: String!
  sender: User!
  date: String!
}

type User {
  id: ID!
}
