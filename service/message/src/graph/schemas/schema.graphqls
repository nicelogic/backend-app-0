type Query {
  getChats: [Chat!]
  getChat(chatId: ID!): Chat
}

type Mutation {
  createChat(memberIds: [String!]!, name: String!): Chat!
  deleteChat(id: ID!): String!
}

type Chat {
  id: ID!
  name: String!
  members: [User!]!
  lastMessage: Message
  messages: [Message]
}

type Message {
  id: ID!
  text: String
  sender: User!
  date: String!
}

type User {
  id: ID!
}
