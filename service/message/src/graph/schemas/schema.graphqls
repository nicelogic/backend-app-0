type Query {
  getChats: [Chat!]
}

type Mutation {
  createChat(memberIds: [String!]!, name: String!): Chat!
  deleteChat(id: ID!): String!
}

type Chat {
  id: ID!
  members: [User!]!
  # optinal, if no set,  use members remakrname/nickname
  name: String
  lastMessage: Message
}

type Message {
  id: ID!
  message: String!
  sender: User!
  date: String!
}

type User {
  id: ID!
}
