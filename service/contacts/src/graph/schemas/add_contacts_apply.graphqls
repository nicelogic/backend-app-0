
extend type Mutation {
  applyAddContacts(input: ApplyAddContactsInput!): AddContactsApply!
  replyAddContacts(input: ReplyAddContactsInput!): Boolean!
}

extend type Query{
  addContactsApply(first: Int!, after: String!): AddContactsApplyConnection!
}

input ApplyAddContactsInput {
  contactsId: ID!
  remarkName: String!
}

input ReplyAddContactsInput {
  id: ID!
  ack: Boolean!
  remarkName: String
}

type AddContactsApply {
  id: ID!
  user_id: ID!
  contacts_id: ID!
  remark_name: String!
  message: String
}

type AddContactsApplyConnection {
  totalCount: Int!
  edges: [AddContactsApplyEdge!]
  pageInfo: AddContactsApplyEdgePageInfo!
}

type AddContactsApplyEdge{
  node: AddContactsApply!
  cursor: String
}

type AddContactsApplyEdgePageInfo{
  endCursor: String
  hasNextPage: Boolean!
}